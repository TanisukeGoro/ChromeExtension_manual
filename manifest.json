{
  "manifest_version": 2,
  "name": "Chrome Extension Playground",
  "version": "0.1.0",
  "author": "Okita Kamegoro",
  "browser_action": {
      "default_icon": "./icon.png",
      "default_popup": "popup.html"
  },
  "background": {
      "scripts": [
          "background.js"
      ],
      "persistent": false
  },
  "icons": {
    "128": "./icon.png"
  },
  "content_scripts": [{
      "matches": [
          "http://*/*",
          "https://*/*"
      ],
      "js": [
          "contents_script.js"
      ]
  }],
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "description": "Chrome拡張機能の機能をテストする",
  "short_name": "Chrome Extension Playground"
}